// https://www.npmjs.com/package/@tsconfig/node16
{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    // Node v16 configuration
    "lib": ["ES2021"],
    "target": "ES2021",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "cfs.config.js", "src/cfs.config.cjs"]
}
